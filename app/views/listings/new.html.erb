<%= render partial: "/layouts/navbar" %>

<div class="container formImg">

<%= form_for :listing, url:listings_path do |form| %>
  
  <div class="create_listing_form">
    <div>
      <h3>Name</h3>
      <%= form.text_field :name, placeholder: 'Name'%>
    </div>
  </div>

  <div class="create_listing_form">
    <div>
      <h3>Place Type</h3>
      <%= form.text_field :place_type, placeholder: 'Place Type'%>
    </div>
  </div>
  
  <div class="create_listing_form">
    <div>
      <h3>Property Type</h3>
      <%= form.text_field :property_type, placeholder: 'Property Type'%>
    </div>
  </div>
  
  <div class="create_listing_form">
    <div>
      <h3>Room Number</h3>
      <%= form.text_field :room_number, placeholder: 'Room Number'%>
    </div>
  </div>

  <div class="create_listing_form">
    <div>
      <h3>Bed Number</h3>
      <%= form.text_field :bed_number, placeholder: 'Bed Number'%>
    </div>
  </div>

  <div class="create_listing_form">
    <div>
      <h3>Guest Number</h3>
      <%= form.text_field :guest_number, placeholder: 'Guest Number'%>
    </div>
  </div>
  
  <div class="create_listing_form">
    <div>
      <h3>Country</h3>
      <%= form.text_field :country, placeholder: 'Country'%>
    </div>
  </div>

  <div class="create_listing_form">
    <div>
      <h3>State</h3>
      <%= form.text_field :state, placeholder: 'State'%>
    </div>
  </div>
  
  <div class="create_listing_form">
    <div>
      <h3>City</h3>
      <%= form.text_field :city, placeholder: 'City'%>
    </div>
  </div>

  <div class="create_listing_form">
    <div>
      <h3>Zip Code</h3>
      <%= form.text_field :zipcode, placeholder: 'Zip Code'%>
    </div>
  </div>

  <div class="create_listing_form">
    <div>
      <h3>Address</h3>
      <%= form.text_field :address, placeholder: 'Address'%>
    </div>
  </div>

  <div class="create_listing_form">
    <div>
      <h3>Price</h3>
      <%= form.text_field :price, placeholder: 'Price'%>
    </div>
  </div>

  <div class="create_listing_form">
    <div>
      <h3>Description</h3>
      <%= form.text_field :description, placeholder: 'Description'%>
    </div>
  </div>
  </br>
  <div class="create_listing_form">
    <div>
      <h3>Please upload exactly 3 profile photos</h3>
      <%= form.file_field :photos, multiple: true %>
    </div>
  </div>
  </br>

  <%= form.hidden_field :user_id ,value: current_user.id %>

  <div class="create_listing_form">
    <div>
    <%= form.submit "Confirm", class: "btn btn-primary" %>
    </div>
  </div>

<% end %>

</div>

<%= render partial: "/layouts/footer" %>